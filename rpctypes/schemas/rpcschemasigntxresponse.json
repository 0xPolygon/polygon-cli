{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "raw": {
            "type": "string",
            "pattern": "^0x[0-9a-f]{1,}$"
        },
        "tx": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "pattern": "^0x[0-9a-f]{1,}$"
                },
                "nonce": {
                    "type": "string",
                    "pattern": "^0x[0-9a-f]{1,}$"
                },
                "to": {
                    "type": "string",
                    "pattern": "^0x[0-9a-f]{1,}$"
                },
                "gas": {
                    "type": "string",
                    "pattern": "^0x[0-9a-f]{1,}$"
                },
                "gasPrice": {
                    "type": ["string", "null"]
                },
                "maxPriorityFeePerGas": {
                    "type": "string",
                    "pattern": "^0x[0-9a-f]{1,}$"
                },
                "maxFeePerGas": {
                    "type": "string",
                    "pattern": "^0x[0-9a-f]{1,}$"
                },
                "value": {
                    "type": "string",
                    "pattern": "^0x[0-9a-f]{1,}$"
                },
                "input": {
                    "type": "string",
                    "pattern": "^0x[0-9a-f]*$"
                },
                "v": {
                    "type": "string",
                    "pattern": "^0x[0-9a-f]{1,}$"
                },
                "r": {
                    "type": "string",
                    "pattern": "^0x[0-9a-f]{1,}$"
                },
                "s": {
                    "type": "string",
                    "pattern": "^0x[0-9a-f]{1,}$"
                },
                "hash": {
                    "type": "string",
                    "pattern": "^0x[0-9a-f]{1,}$"
                }
            },
            "required": [
                "type",
                "nonce",
                "to",
                "gas",
                "gasPrice",
                "maxPriorityFeePerGas",
                "maxFeePerGas",
                "value",
                "input",
                "v",
                "r",
                "s",
                "hash"
            ]
        }
    },
    "required": [
        "raw",
        "tx"
    ]
}
